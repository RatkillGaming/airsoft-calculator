{
  "name": "airsoft-calculator",
  "version": "1.0.0",
  "description": "A modern Next.js application for calculating joules and FPS in airsoft, featuring comprehensive Playwright E2E testing",
  "author": "ratkillGaming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RatkillGaming/airsoft-calculator.git"
  },
  "keywords": [
    "playwright",
    "nextjs",
    "typescript",
    "testing",
    "e2e-testing",
    "airsoft",
    "calculator"
  ],
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "playwright test --project=chromium",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --project=chromium --headed --workers=1",
    "test:visible": "node run-tests-visible.js",
    "test:interactive": "node run-tests-interactive.js",
    "test:debug": "playwright test --debug"
  },
  "dependencies": {
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "playwright": "^1.40.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
